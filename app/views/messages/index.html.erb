<%# if current_user %>
<p>
  <%= link_to "質問の作成", :new_user_message %>
</p>
<%# end %>

<% if @messages.present? %>
<% @messages.each do |message| %>
<p><%= truncate(message.message_text, length: 80) %><br>
  <%if message.answer_text.blank? %>
  <p>回答がありません。</p>
  <% else %>
  <p><%= message.answer_text %></p>
  <p>回答があります。</p>
  <% end %>

  <%= link_to "もっと読む", user_message_path(@user, message) %>
  <%#= link_to message.id, user_message_path(@messages, message) %>
</p>
<% end %>
<%#= will_paginate @messages %>
<% else %>
<p>記事がありません。</p>
<% end %>
