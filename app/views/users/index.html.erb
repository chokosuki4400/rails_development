<h2 class="c-title"><%=current_user.name%>さんのマイページ</h2>

<%if user_signed_in? %>
<div class="c-img--circle" style="background-image: url(<%= current_user.image %>)"></div>
<dl class="p-table">
	<dt>表示名</dt>
	<dd><%=current_user.name%></dd>
	<dt>Monofy ID</dt>
	<dd><%=current_user.monofy_id%></dd>
	<dt>プロフィール</dt>
	<dd><%=current_user.profile%></dd>
</dl>

<%= link_to edit_user_registration_path, class:"c-btn--twitter" do %>
<i class="far fa-edit"></i>アカウント編集
<% end %>

<%= link_to "ログアウト", destroy_user_session_path, class:"c-btn--disable", method: :delete, data: { confirm: "ログアウトしますか?" } %>
<%end%>
